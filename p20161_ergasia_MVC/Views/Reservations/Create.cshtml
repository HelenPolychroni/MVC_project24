@model p20161_ergasia_MVC.Models.Reservation

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <p>Movie: @ViewBag.MoviesName</p>
            <p>Cinema: @ViewBag.CinemasName</p>
            <p>Date and Time: @ViewBag.Time</p>
            <p>Available seats: 38</p>

            <div hidden class="form-group">
                <label asp-for="CustomersUsername" class="control-label"></label>
                <select asp-for="CustomersUsername" class ="form-control" asp-items="ViewBag.CustomersUsername"></select>
            </div>
            
            <div class="form-group">
                <label  class="control-label">Number of seats</label>
                <input asp-for="NumberOfSeats" class="form-control" />
                <span asp-validation-for="NumberOfSeats" class="text-danger"></span>
            </div>

            
            &nbsp;
            <div class="form-group">
                <input type="submit" value="Create reservation" class="btn btn-primary" /> |
                <a asp-action="Index">Back to List</a>
            </div>
       </form>
    </div>
</div>


