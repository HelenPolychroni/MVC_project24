@model IEnumerable<p20161_ergasia_MVC.Models.Reservation>

@{
    ViewData["Title"] = "Index";
}

<h1>Reservation history</h1>

<p>
    <a asp-action="Create">Make a reservatioon</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Movie
            </th>
            <th>
                Cinema Room
            </th>
            <th>
                Number of seats
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomersUsernameNavigation)
            </th>
            
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ScreeningsMoviesNameNavigation.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ScreeningsCinemasNameNavigation.Name)
                </td>
                <td>
                @Html.DisplayFor(modelItem => item.NumberOfSeats)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomersUsernameNavigation.Username)
            </td>
           
        </tr>
}
    </tbody>
</table>
